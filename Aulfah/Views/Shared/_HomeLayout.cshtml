<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AulfahProject_Asma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Footer.css">
    <link rel="stylesheet" href="~/css/Cart.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AulfahProject_Asma.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>

<body>
    <header>
        <nav class="headnavbar">
            <div class="col justify-content-around mx-auto my-auto ">
                @if (User.IsInRole(SD.Role_Artist))
                {
                    <a class="navbar-brand link-light text-decoration-none" asp-area="" asp-controller="Artist" asp-action="Home">Aulfah</a>

                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aulfah</a>
                }


            </div>

            <div class="dropdown linkcolor ">
                <a class="link dropdown-toggle mx-3 text-decoration-none" href="#" role="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="bi bi-three-dots iconNav "></i>
                </a>

                <ul class="dropdown-menu" style="background:#A2D48D;" aria-labelledby="dropdownMenuButton">
                    @if (User.IsInRole(SD.Role_Artist))
                    {
                        <li>
                            <a asp-action="Home" asp-controller="Artist" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-house mx-1" style="color: #1C395E ;"></i>Home
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Index" asp-controller="Home" class="dropdown-item  rounded text-decoration-none">
                                <i class="fa-solid fa-house mx-1" style="color: #1C395E ;"></i> Home
                            </a>
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Customer))

                    {
                        <li>
                            <a asp-action="Index" asp-controller="Cart" class="dropdown-item  rounded text-decoration-none">
                                Orders
                            </a>
                        </li>

                    }
                    <li>
                        <a asp-action="About" asp-controller="Home" class="dropdown-item rounded text-decoration-none">
                            <i class="fa-solid fa-circle-info mx-1" style="color: #1C395E ;"></i>About Aulfah
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <li>
                            <a asp-action="Index" asp-controller="Category" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-shapes mx-1" style="color: #1C395E ;"></i>Categories
                            </a>
                        </li>

                    }

                    <li>
                        <a asp-action="Index" asp-controller="Product" class="dropdown-item rounded text-decoration-none">
                            <i class="fa-solid fa-bag-shopping mx-1" style="color: #1C395E ;"></i>Products
                        </a>
                    </li>
                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <li>
                            <a asp-action="Home" asp-controller="Artist" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-palette mx-1" style="color: #1C395E;"></i>Artists
                            </a>
                        </li>
                        <li>
                            <a asp-action="Home" asp-controller="Artist" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-star mx-1" style="color: #1C395E;"></i>Customize Products
                            </a>
                        </li>
                    }
                    else if (User.IsInRole(SD.Role_Artist))
                    {
                        <li>
                            <a herf="#" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-star mx-1" style="color: #1C395E;"></i>Services
                            </a>
                        </li>
                    }
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <li>
                            <a asp-action="Profile" asp-controller="Customer" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-user mx-1" style="color: #1C395E;"></i>Profile
                            </a>
                        </li>
                    }
                    else if (User.IsInRole(SD.Role_Artist))
                    {

                        <li>
                            <a asp-action="Profile" asp-controller="Artist" class="dropdown-item rounded text-decoration-none">
                                <i class="fa-solid fa-user mx-1" style="color: #1C395E;"></i>Profile
                            </a>
                        </li>
                    }
                    <li>
                        <a asp-action="Setting" asp-controller="Artist" class="dropdown-item rounded text-decoration-none">
                            <i class="fa-solid fa-gear mx-1" style="color: #1C395E;"></i>Settings
                        </a>
                    </li>
                    @if (User.IsInRole(SD.Role_Customer) || User.IsInRole(SD.Role_Artist))
                    {

                        <li>
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <input id="logout" type="submit" class="input-group-text border-0 mx-3" value="Logout" style="background: #A2D48D ; color:#1C395E;" />
                            </form>
                        </li>
                    }


                </ul>

            </div>
            <div class="col col-7 my-auto">
                <form asp-controller="Home" asp-action="Index" method="post" class="form-inputs ">
                    <input type="text" title="search" name="name" class="form-control rounded-pill searchfrorm" />
                    <i class="bi bi-search "></i>

                </form>
            </div>
            <div class="col col-3">
                <ul class="navbar-nav flex-grow-1 list-group-horizontal justify-content-end">
                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <li class="nav-item mx-auto my-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Registeration" asp-action="Signin">
                                <i class="bi bi-heart-fill iconNav"></i>
                            </a>
                        </li>
                        <li class="nav-item mx-auto my-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart-fill iconNav"></i>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole(SD.Role_Customer) || User.IsInRole(SD.Role_Artist))
                    {
                        <li class="nav-item mx-auto my-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Artist" asp-action="Home">
                                <i class="bi bi-person-circle iconAccount"></i>
                            </a>
                        </li>
                    }
                    <li class="nav-item mx-auto my-auto">
                        <partial name="_LoginPartial" />
                    </li>

                </ul>

            </div>

        </nav>
    </header>

   

    <div class="container">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>


    <footer class="py-5 d-flex flex-wrap" id="footer">
        <div class="row">
            <div class="col-5 col-md-5 mb-3">
                <h5>WHAT IS AULFAH?</h5>
                <ul class="d-flex d-inline-block flex-wrap">

                    <li class="nav-item mb-2">Website for selling artworks and pieces.</li>
                    <li class="nav-item mb-2">Environmentally friendly website selling sustainable and recyclable art pieces.</li>
                    <li class="nav-item mb-2">Serves as a community for artists, allowing them to sell their artistic works.</li>
                    <li class="nav-item mb-2">Share their creative ideas, and tell the story behind each product</li>

                </ul>
            </div>

            <div class="col-2">
                <ul class="list-unstyled d-flex flex-wrap my-2">
                    <li class="ms-3 mb-3"><i class="fa-brands fa-linkedin"></i><a class="link-light text-decoration-none links" href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/"> LinkedIn</a></li>
                    <li class="ms-3 mb-3"><i class="fa-brands fa-instagram"></i> <a class="link-light text-decoration-none links" href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/">Instagram</a></li>
                    <li class="ms-3 mb-3"><i class="fa-solid fa-envelope"></i><a class="link-light text-decoration-none links" href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/"> Aulfah@gmail.com</a></li>
                    <li class="ms-3 mb-3"> <i class=" fa-solid fa-phone-flip"></i> +968 99887766</li>
                </ul>
            </div>


            <div class="col-3 col-md-3 offset-md-1 mb-3 mx-auto ">
                <form>
                    <h5> <i class="bi bi-question-circle-fill"></i> Need Help?</h5>
                    <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                        <label for="newsletter1" class="visually-hidden">Email address</label>
                        <input id="newsletter1" type="text" class="form-control" placeholder="Enter your question here">
                        <button class="btn btn-primary w-25" id="button" type="button">Send</button>
                    </div>
                </form>
            </div>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
