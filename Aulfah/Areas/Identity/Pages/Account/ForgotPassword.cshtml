@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";

}
<div class="d-flex justify-content-center">
    <div class="card mt-5 p-3 w-50 text-center shadow-none border">
    <div class="card-body">
<h2 class="card-title">@ViewData["Title"]</h2>
<h6 class="card-subtitle mt-3">Enter your Email</h6>
<hr />
<div class="">
    <div class="">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-4">
                <input asp-for="Input.Email" class="form-control mb-4" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class=" btn  w-50">Reset Password</button>
        </form>
    </div>
        </div>
</div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
