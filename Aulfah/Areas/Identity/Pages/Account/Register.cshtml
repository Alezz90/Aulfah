@page
@using Aulfah.Utility;
@model RegisterModel
@{
    Layout = "~/Views/Shared/_RegisterationLayout.cshtml";
    ViewData["Title"] = "Register";

}

<div class="d-flex justify-content-center flex-wrap mt-lg-5">
    <div class="card m-3 w-50 signcard" style="background: #A2D48D; color:#1C395E;">

        <div class="card-body">

            <div class=" card-title text-center mb-4 circle-inner">
                <h2 class="circle-text circle-text">@ViewData["Title"]</h2>
            </div>

            <form id="signup-form" class="mx-4" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">

                    <div class="col-6">
                        <label asp-for="Input.Fname" class="form-label mb-0">First Name</label><br>
                        <input asp-for="Input.Fname" class="form-control " type="text" placeholder="Enter Your First Name" /><br>
                        <span asp-validation-for="Input.Fname" class="text-danger"></span>

                    </div>

                    <div class="col-6">
                        <label input asp-for="Input.Lname" class="form-label mb-0">Last Name</label><br>
                        <input asp-for="Input.Lname" class="form-control" placeholder="Enter Your Last Name" /><br>
                        <span asp-validation-for="Input.Lname" class="text-danger"></span>

                    </div>

                </div>

                <div class="row">

                    <div class="col-6">
                        <label asp-for="Input.PhoneNumber" class="form-label mb-0">Phone</label><br>
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter Your Number"><br>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                    </div>

                    <div class="col-6">
                        <label asp-for="Input.DateOfBirth" class="form-label mb-0" for="age">Age</label><br>
                        <input asp-for="Input.DateOfBirth" class="form-control"><br>
                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>

                    </div>

                </div>

                <div class="row">

                    <div class="col-6">
                        <label asp-for="Input.Email" class="form-label mb-0">Email</label><br>
                        <input asp-for="Input.Email" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" /><br>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                    </div>

                    <div class="col-6">

                        <label asp-for="Input.Role" class="form-label mb-0">Role</label><br>
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-Select Role-</option>
                        </select>

                    </div>

                </div>
                <div class="row">

                    <div class="col-6">
                        <label asp-for="Input.Password" class="form-label mb-0">Password</label><br>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter a Password" /><br>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>

                    <div class="col-6">
                        <label asp-for="Input.ConfirmPassword" class="form-label mb-0">Confirmed Password</label><br>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmed Password" /><br>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>



                    </div>

                </div>
                <div class="text-center ">
                    <input class="btn signup-button" type="submit" value="Sign up">
                </div>
                <div class="text-center mt-2">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none " style="color:#1c395e;">You have an account?</a>
                </div>
            </form>

        </div>

    </div>

    <div class="" style="color: #1c395e;">
        <section>
            <p class="divider-text d-flex pt-3" style="color: #1c395e;">or</p>

            <h3>Use another service to register.</h3>

            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
